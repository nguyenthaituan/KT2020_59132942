@model KT2020_59132942.Models.DocGia

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    String gtinh = "";
}

<h2>Details</h2>

<table border="1" cellpadding="0" cellspacing="0" style="font-size:14px;margin-left:50px;">
    <tr>
        <td>
            <table cellpadding="2" cellspacing="10">
                <caption><b>THÔNG TIN CHI TIẾT</b></caption>
                <tr>
                    <td rowspan="8"><img src="/Images/@Html.DisplayFor(model => model.AnhDG)" width="100" height="100" /></td>
                    <td>Mã đọc giả:</td>
                    <td>@Html.DisplayFor(model => model.MaDB)</td>
                </tr>
                <tr>
                    <td>Họ đọc giả:</td>
                    <td>@Html.DisplayFor(model => model.HoDG)</td>
                </tr>
                <tr>
                    <td>Tên đọc giả:</td>
                    <td>@Html.DisplayFor(model => model.TenDG)</td>
                </tr>

                <tr>
                    <td>Ngày sinh:</td>
                    <td>@Html.DisplayFor(model => model.NgaySinh)</td>
                </tr>

                <tr>
                    <td>Giới tính:</td>
                    <td>
                        @{if (Model.GioiTinh == true)
                            { gtinh = "Nam"; }
                            else
                            { gtinh = "Nữ"; }
                        }
                        @gtinh
                    </td>
                </tr>

                <tr>
                    <td>Email:</td>
                    <td>@Html.DisplayFor(model => model.Email)</td>
                </tr>

                <tr>
                    <td>Loại đọc giả:</td>
                    <td>@Html.DisplayFor(model => model.LoaiDocGia.TenLoaiDG)</td>
                </tr>

            </table>
        </td>
    </tr>
</table>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.MaDB }) |
    @Html.ActionLink("Back to List", "Index")
</p>
