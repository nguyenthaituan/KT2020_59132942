@model KT2020_59132942.Models.DocGia

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string gtinh = "";
}

<style>
    table {
        font-size: 13pt;
    }
</style>
<h3 style="text-align:center; margin-top:50px"> Bạn có chắc chắn xóa thông tin sản phẩm này?</h3>
<table align="center" border="1" cellpadding="0" cellspacing="0" style="font-size:14px; margin-left:auto; margin-right: auto; margin-top: 20px; margin-bottom:30px">
    <tr>
        <td>
            <h2 style="margin: 10px; text-align: center; color:red"><b>THÔNG TIN CHI TIẾT</b></h2>
            <table style="margin: 10px" cellpadding="2" cellspacing="10">
                <tr>
                    <td rowspan="8"><img src="~/Images/@Html.DisplayFor(model => model.AnhDG)" width="250" height="300" style="margin-right: 10px" /></td>
                </tr>
                <tr>
                    <td><b>Mã độc giả:</b></td>
                    <td>@Html.DisplayFor(model => model.MaDB)</td>
                </tr>
                <tr>
                    <td><b>Họ độc giả:</b> </td>
                    <td>@Html.DisplayFor(model => model.HoDG)</td>
                </tr>
                <tr>
                    <td><b>Tên độc giả:</b> </td>
                    <td>@Html.DisplayFor(model => model.TenDG)</td>
                </tr>
                <tr>
                    <td><b>Giới tính:</b> </td>
                    <td>
                        @{if (Model.GioiTinh == true)
                            { gtinh = "Nam"; }
                            else
                            { gtinh = "Nữ"; }
                        }
                        @gtinh
                    </td>
                </tr>
                <tr>
                    <td><b>Ngày sinh:</b> </td>
                    <td>@Html.DisplayFor(model => model.NgaySinh)</td>
                </tr>
                <tr>
                    <td><b>Email:</b> </td>
                    <td>@Html.DisplayFor(model => model.Email)</td>
                </tr>
                <tr>
                    <td><b>Loại độc giả:</b></td>
                    <td> @Html.DisplayFor(model => model.LoaiDocGia.TenLoaiDG)</td>
                </tr>
            </table>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color" style="margin-left: 10px; margin-top: 15px; margin-bottom: 10px">
                    <input type="submit" value="Xóa"  /> |
                    @Html.ActionLink("Quay lại", "Index")
                </div>
            }
</table>
